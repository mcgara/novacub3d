{
  "include": ["../"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": "../",
    "moduleResolution": "Node",
    "baseUrl": "../",
    "outDir": "../../build/db/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
